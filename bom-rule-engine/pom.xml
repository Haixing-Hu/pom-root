    <drools.version>10.0.0</drools.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <!-- Easy Rules -->
      <dependency>
        <groupId>org.jeasy</groupId>
        <artifactId>easy-rules-core</artifactId>
        <version>${easy-rules.version}</version>
        <type>jar</type>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.jeasy</groupId>
        <artifactId>easy-rules-suport</artifactId>
        <version>${easy-rules.version}</version>
        <type>jar</type>
        <scope>compile</scope>
